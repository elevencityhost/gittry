CREATE TABLE test.CN_AUDIT_PROPERTIES
(
   ID int NOT NULL,
   PROP_NAME varchar(50) PRIMARY KEY NOT NULL,
   DESCRIPTION varchar(255),
   CREATED_DT datetime DEFAULT NOW() NOT NULL,
   MODIFIED_DT datetime DEFAULT NOW() NOT NULL
)

CREATE UNIQUE INDEX PK__ES_AUDIT__0B2DD0743EC4A998 ON test.CN_AUDIT_PROPERTIES(PROP_NAME)


Trigger:
CREATE TRIGGER CN_AUDIT_PROPERTIES_LAST_UPDATE_TRIGGER
AFTER UPDATE ON test.CN_AUDIT_PROPERTIES
FOR EACH ROW SET @MODIFIED_DT=NOW()