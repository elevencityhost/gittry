CREATE TABLE test.CN_AUDIT_INTERFACES
(
   ID int NOT NULL,
   INTERFACE_ID varchar(20) PRIMARY KEY NOT NULL,
   BUSINESS_NAME varchar(100),
   SOURCE_SYSTEM varchar(50),
   TARGET_SYSTEM varchar(50),
   CREATED_DT datetime DEFAULT NOW() NOT NULL,
   MODIFIED_DT datetime DEFAULT NOW() NOT NULL,
   TYPE varchar(20)
)

CREATE UNIQUE INDEX PK__CN_AUDIT__84F89E8C06339E99 ON test.CN_AUDIT_INTERFACES(INTERFACE_ID)

Trigger:
CREATE TRIGGER CN_AUDIT_INTERFACES_LAST_UPDATE_TRIGGER
AFTER UPDATE ON test.CN_AUDIT_INTERFACES
FOR EACH ROW SET @MODIFIED_DT=NOW()